@page "{id:long}"
@model EditModel

@{
    ViewData["Title"] = "Edit Transaction";
}

<h1>Edit</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransactionEditModel.Id" />
            <div class="mb-3">
                <label asp-for="TransactionEditModel.Id" class="form-label"></label>
                <input asp-for="TransactionEditModel.Id" class="form-control" disabled />
            </div>
            <div class="mb-3">
                <label asp-for="TransactionEditModel.DateTime" class="form-label"></label>
                <input asp-for="TransactionEditModel.DateTime" class="form-control" />
                <span asp-validation-for="TransactionEditModel.DateTime" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TransactionEditModel.AccountId" class="form-label"></label>
                <select asp-for="TransactionEditModel.AccountId" asp-items="Model.Accounts" class="form-select"></select>
                <span asp-validation-for="TransactionEditModel.AccountId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TransactionEditModel.Description" class="form-label"></label>
                <input asp-for="TransactionEditModel.Description" class="form-control" />
                <span asp-validation-for="TransactionEditModel.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TransactionEditModel.TransactionType" class="form-label"></label>
                <select asp-for="TransactionEditModel.TransactionType" asp-items="Model.TransactionTypes" class="form-select"></select>
                <span asp-validation-for="TransactionEditModel.TransactionType" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TransactionEditModel.Amount" class="form-label"></label>
                <input asp-for="TransactionEditModel.Amount" class="form-control" />
                <span asp-validation-for="TransactionEditModel.Amount" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
