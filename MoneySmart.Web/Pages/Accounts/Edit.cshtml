@page "{number:long}"
@model EditModel

@{
    ViewData["Title"] = "Edit Account";
}

<h1>Edit</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="AccountModel.Number" class="form-label"></label>
                <input asp-for="AccountModel.Number" class="form-control" />
                <span asp-validation-for="AccountModel.Number" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="AccountModel.Name" class="form-label"></label>
                <input asp-for="AccountModel.Name" class="form-control" />
                <span asp-validation-for="AccountModel.Name" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="AccountModel.Number" />
            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
